<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRoot"
    android:layout_marginBottom="8dp"
    android:background="#ffffff"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="4dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="4dp"
      >

    <TextView
        android:id="@+id/tvNoteItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        tools:text="Lorem Noa Scotsman"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/imgNoteItem"
          android:layout_width="56dp"
          android:layout_height="56dp"
          android:layout_marginRight="8dp"
          android:scaleType="fitXY"
          android:src="@drawable/square_thumb"
          />
      <TextView
          android:id="@+id/tvNoteItemText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorPrimaryText"
          tools:text="Lorem ipsum novo cuomo gratis vibrio we will find the best route forward and proceed"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="4dp"
        >
      <View
          android:layout_width="wrap_content"
          android:layout_height="4dp"
          android:layout_weight="1"
          />

      <TextView
          android:id="@+id/tvNoteItemEdit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/marginLG"
          android:drawableLeft="@drawable/ic_mode_edit_blue_24dp"
          android:gravity="center_vertical"
          android:text="@string/edit"
          android:textColor="@color/colorSecondaryText"
          />

      <TextView
          android:id="@+id/tvNoteItemDelete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_delete_forever_blue_24dp"
          android:gravity="center_vertical"
          android:text="@string/delete"
          android:textColor="@color/colorSecondaryText"
          />

    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>